  "keywords": [
    "aeterna",
    "opencode",
    "ai",
    "memory",
    "knowledge",
    "plugin"
  ],
  "author": "Aeterna Contributors",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/kikokikok/aeterna.git",
    "directory": "packages/opencode-plugin"
  },
  "bugs": {
    "url": "https://github.com/kikokikok/aeterna/issues"
  },
  "homepage": "https://github.com/kikokikok/aeterna/tree/main/packages/opencode-plugin#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@opencode-ai/plugin": "1.1.36",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
