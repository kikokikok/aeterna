# EditorConfig configuration for Memory-Knowledge System
#
# Ensures consistent editor settings across all developers

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{rs,toml,yaml,yml}]
max_line_length = 100

[*.rs]
indent_size = 4

[*.{toml,yaml,yml}]
indent_size = 2
