{
  "id": null,
  "uid": "aeterna-system-health",
  "title": "Aeterna - System Health",
  "tags": ["aeterna", "system"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "time": { "from": "now-1h", "to": "now" },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Service Uptime",
      "gridPos": { "x": 0, "y": 0, "w": 4, "h": 4 },
      "targets": [
        {
          "expr": "up{job=~\"aeterna.*\"}",
          "legendFormat": "{{instance}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "green", "value": 1 }
            ]
          },
          "unit": "short",
          "mappings": [
            { "options": { "0": { "text": "DOWN" }, "1": { "text": "UP" } }, "type": "value" }
          ]
        }
      }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "HTTP Request Rate",
      "gridPos": { "x": 4, "y": 0, "w": 10, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=~\"aeterna.*\"}[5m])) by (service)",
          "legendFormat": "{{service}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "reqps", "custom": { "lineWidth": 2 } }
      }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "HTTP Error Rate",
      "gridPos": { "x": 14, "y": 0, "w": 10, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=~\"aeterna.*\",status=~\"5..\"}[5m])) by (service)",
          "legendFormat": "{{service}} 5xx"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": { "lineWidth": 2 },
          "color": { "mode": "fixed", "fixedColor": "red" }
        }
      }
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "P99 Latency (ms)",
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{job=~\"aeterna.*\"}[5m])) by (le, service)) * 1000",
          "legendFormat": "p99 {{service}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "ms" }
      }
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "CPU Usage",
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(process_cpu_seconds_total{job=~\"aeterna.*\"}[5m])) by (instance) * 100",
          "legendFormat": "{{instance}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percent", "max": 100 }
      }
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Memory Usage (RSS)",
      "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "process_resident_memory_bytes{job=~\"aeterna.*\"}",
          "legendFormat": "{{instance}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "bytes" }
      }
    },
    {
      "id": 7,
      "type": "stat",
      "title": "Active Tenants",
      "gridPos": { "x": 12, "y": 16, "w": 4, "h": 4 },
      "targets": [
        {
          "expr": "count(count by (tenant_id) (aeterna_memory_operations_total))",
          "legendFormat": "Tenants"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "short" }
      }
    }
  ]
}
