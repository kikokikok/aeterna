{
  "id": null,
  "uid": "aeterna-governance-compliance",
  "title": "Aeterna - Governance & Compliance",
  "tags": ["aeterna", "governance", "compliance"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "time": { "from": "now-1h", "to": "now" },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Policy Evaluations/s",
      "gridPos": { "x": 0, "y": 0, "w": 4, "h": 4 },
      "targets": [
        {
          "expr": "sum(rate(aeterna_policy_evaluations_total[1m]))",
          "legendFormat": "eval/s"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": { "mode": "palette-classic" }
        }
      }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Policy Violations (1h)",
      "gridPos": { "x": 4, "y": 0, "w": 4, "h": 4 },
      "targets": [
        {
          "expr": "sum(increase(aeterna_policy_violations_total[1h]))",
          "legendFormat": "violations"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "yellow", "value": 10 },
              { "color": "red", "value": 50 }
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "GDPR Requests (24h)",
      "gridPos": { "x": 8, "y": 0, "w": 4, "h": 4 },
      "targets": [
        {
          "expr": "sum(increase(aeterna_gdpr_requests_total[24h]))",
          "legendFormat": "requests"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": { "mode": "palette-classic" }
        }
      }
    },
    {
      "id": 4,
      "type": "stat",
      "title": "Authorization Denials (1h)",
      "gridPos": { "x": 12, "y": 0, "w": 4, "h": 4 },
      "targets": [
        {
          "expr": "sum(increase(aeterna_authz_decisions_total{decision=\"deny\"}[1h]))",
          "legendFormat": "denials"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "yellow", "value": 5 },
              { "color": "red", "value": 20 }
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Policy Evaluations by Result",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(aeterna_policy_evaluations_total[1m])) by (result)",
          "legendFormat": "{{result}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "reqps" }
      }
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Policy Violations by Severity",
      "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(aeterna_policy_violations_total[5m])) by (severity)",
          "legendFormat": "{{severity}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "reqps" }
      }
    },
    {
      "id": 7,
      "type": "timeseries",
      "title": "GDPR Requests by Type",
      "gridPos": { "x": 0, "y": 12, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(aeterna_gdpr_requests_total[5m])) by (request_type)",
          "legendFormat": "{{request_type}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "reqps" }
      }
    },
    {
      "id": 8,
      "type": "timeseries",
      "title": "Authorization Decisions",
      "gridPos": { "x": 12, "y": 12, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(aeterna_authz_decisions_total[1m])) by (decision)",
          "legendFormat": "{{decision}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "reqps" }
      }
    },
    {
      "id": 9,
      "type": "table",
      "title": "Top Policy Violators (by Tenant)",
      "gridPos": { "x": 0, "y": 20, "w": 24, "h": 8 },
      "targets": [
        {
          "expr": "topk(10, sum(increase(aeterna_policy_violations_total[24h])) by (tenant_id, policy_id))",
          "legendFormat": "{{tenant_id}} / {{policy_id}}",
          "instant": true
        }
      ],
      "transformations": [
        { "id": "sortBy", "options": { "fields": [{ "displayName": "Value", "desc": true }] } }
      ]
    }
  ]
}
